generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
  analysis  Analysis?
}

model Analysis {
  id        Int     @id @default(autoincrement())
  wordCount Int
  keywords  String  // or Json if you prefer
  postId    Int     @unique
  post      Post    @relation(fields: [postId], references: [id])
}